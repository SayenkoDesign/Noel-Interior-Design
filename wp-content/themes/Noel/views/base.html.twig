<html>
<head>
    {% block meta %}
        <meta charset="utf-8">
        <meta name="viewport" content="height=device-height,width=device-width,initial-scale=1">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
        <title>{{ SP.WordPress.title() }}</title>
    {% endblock %}

    {% block stylesheets %}
        {{ SP.WordPress.header() }}
    {% endblock %}
</head>
<body  {{ SP.WordPress.classes() }}>
{% block body %}
    {% block header %}
        {% include "layout/header.html.twig" %}
    {% endblock %}

    {% block content %}
        <div class="two-column content">
            <div class="row">
                <div class="large-5 columns left-column">
                    <div class="row column">
                        <div class="inner-content">
                            <div class="title text-center">
                                {% if SP.ACF.get_field('subtitle') %}
                                    <h4>{{ SP.ACF.get_field('subtitle') }}</h4>
                                {% endif %}
                                <h1>{{ SP.WordPress.title() }}</h1>
                            </div>
                            {{ SP.ACF.get_field('left_column_content') }}
                            {% if SP.ACF.get_field('left_column_accordion') %}
                                <ul class="accordion" data-accordion data-allow-all-closed="true" data-multi-expand="true">
                                    {% for row in SP.ACF.get_field('left_column_accordion') %}
                                        <li class="accordion-item {% if row.open %}is-active{% endif %}" data-accordion-item>
                                            <a href="#" class="accordion-title">{{ row.title }}</a>
                                            <div class="accordion-content" data-tab-content>
                                                {{ row.content }}
                                            </div>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% endif %}
                            {% if SP.WordPress.getType() == "post" or SP.WordPress.getType() == "portfolio" %}
                                <div class="buttons">
                                    {{ SP.WordPress.getPreviousLink('%link', '&lt; Previous') }}
                                    {% if SP.WordPress.getPreviousLink() and SP.WordPress.getNextLink() %}
                                        <span class="divider">/</span>
                                    {% endif %}
                                    {{ SP.WordPress.getNextLink('%link', 'Next &gt;') }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="large-7 columns right-column">
                    {% if SP.ACF.get_field('right_column_layout') == 'large' %}
                        <div class="large">
                            <img src="{{ SP.ACF.get_field('large_image').sizes.right_large }}">
                        </div>
                    {% elseif SP.ACF.get_field('right_column_layout') == 'landscape' %}
                        <div class="landscape">
                            {% for row in SP.ACF.get_field('landscape') %}
                                <div class="row column landscape-top">
                                    <a class="fancybox" href="{{ row.large.url }}" rel="group" title="Bedroom Before & After">
                                        <img src="{{ row.large.sizes.landscape_top }}" alt="first image" class="fade">
                                    </a>
                                </div>
                                <div class="row landscape-bottom">
                                    <div class="medium-6 columns">
                                        <a class="fancybox" href="{{ row.large.url }}" rel="group" title="Bedroom Before & After">
                                            <img src="{{ row.small_left.sizes.landscape_bottom }}" alt="" class="fade">
                                        </a>
                                    </div>
                                    <div class="medium-6 columns">
                                        <a class="fancybox" href="{{ row.large.url }}" rel="group" title="Bedroom Before & After">
                                            <img src="{{ row.small_right.sizes.landscape_bottom }}" alt="" class="fade">
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% elseif SP.ACF.get_field('right_column_layout') == 'mixed' %}
                        <div class="mixed">
                            {% for row in SP.ACF.get_field('mixed') %}
                                <div class="row column mixed-top">
                                    <a class="fancybox" href="{{ row.large_landscape.url }}" rel="group" title="Bedroom Before & After">
                                        <img src="{{ row.large_landscape.sizes.mixed_top }}" alt="" class="fade">
                                    </a>
                                </div>
                                <div class="row mixed-middle">
                                    <div class="medium-6 columns">
                                        <a class="fancybox" href="{{ row.large_landscape.url }}" rel="group"  title="Bedroom Before & After">
                                            <img src="{{ row.large_portrait.sizes.mixed_left }}" alt="" class="fade"></a>
                                    </div>
                                    <div class="medium-6 columns">
                                        <a class="fancybox" href="{{ row.large_landscape.url }}" rel="group" title="Bedroom Before & After">
                                            <img src="{{ row.top_small_landscape.sizes.mixed_right }}" alt="" class="mixed-middle-top fade">
                                        </a>
                                        <a class="fancybox" href="{{ row.large_landscape.url }}" rel="group" title="Bedroom Before & After">
                                            <img src="{{ row.bottom_small_landscape.sizes.mixed_right }}" alt="" class="fade">
                                        </a>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="medium-4 columns fade">
                                        <a class="fancybox" href="{{ row.large_landscape.url }}" rel="group" title="Bedroom Before & After">
                                            <img src="{{ row.left_square.sizes.mixed_bottom }}" alt="">
                                        </a>
                                    </div>
                                    <div class="medium-4 columns fade"><a class="fancybox" href="{{ row.large_landscape.url }}" rel="group" title="Bedroom Before & After">
                                            <img src="{{ row.center_square.sizes.mixed_bottom }}" alt="">
                                        </a>
                                    </div>
                                    <div class="medium-4 columns fade">
                                        <a class="fancybox" href="{{ row.large_landscape.url }}" rel="group" title="Bedroom Before & After">
                                            <img src="{{ row.right_square.sizes.mixed_bottom }}" alt="">
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endblock %}

    {% block shareTransform %}
        {% include "layout/sharetransform.html.twig" %}
    {% endblock %}

    {% block footer %}
        {% include "layout/footer.html.twig" %}
    {% endblock %}

    {% block contact %}
        <div id="contact-form" class="fancybox-contact-content">
            <div class="row column contact-main-row">
                <div class="large-4 columns left-contact-column">
                    <div class="row column">
                        <div class="contact-logo"></div>
                    </div>
                </div>
                <div class="large-8 columns right-contact-column">
                    <h1>Call 509.952.3906</h1>
                    <h4>Michelle Will Respond Within a Business Day</h4>
                    <button class="contact-button">SUBMIT</button>
                </div>
            </div>
        </div>
    {% endblock %}

{% endblock %}

{% block scripts %}
    {{ SP.WordPress.footer() }}
{% endblock %}
</body>
</html>
