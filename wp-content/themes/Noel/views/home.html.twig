<html>
<head>
    {% block meta %}
        <meta charset="utf-8">
        <meta name="viewport" content="height=device-height,width=device-width,initial-scale=1">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
        <title>title</title>
    {% endblock %}

    {% block stylesheets %}
        {{ head|raw }}
    {% endblock %}

</head>
<body>
{% block body %}
    {% block header %}
        {% include "layout/header.html.twig" %}
    {% endblock %}

    {% block nav %}
        {% include "layout/nav.html.twig" %}
    {% endblock %}

    {% block imgslider %}
        {% include "layout/imgslider.html.twig" %}
    {% endblock %}

    <div class="contentContainer">
        <div class="row column">
            <div class="row">
                <div class="col-share">
                    <h1>Share this page!</h1>

                    <a href=""><i class="fa fa-instagram fa-lg circle-icon" aria-hidden="true"></i></a>
                    <a href=""><i class="fa fa-pinterest-p fa-lg circle-icon" aria-hidden="true"></i></a>
                    <a href=""><i class="fa fa-facebook fa-lg circle-icon" aria-hidden="true"></i></a>
                    <a href=""><i class="fa fa-google fa-lg circle-icon" aria-hidden="true"></i></a>
                </div>
                <div class="col-transform">
                    <h1>Ready to Transform Your Home?</h1>
                    <form>
                        <input><br><br>
                        <button class="transformButton">NEXT ></button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- class row class column = 12 column grid
    12 column grid inside,
    row inside,
    6 column grid text-center -->

    <div class="footerContainer">
        {% block footer %}
            {% include "layout/footer.html.twig" %}
        {% endblock %}
    </div>
{% endblock %}

{% block scripts %}

{% endblock %}
</body>
</html>
